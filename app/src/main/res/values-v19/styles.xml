<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Actionbar color toolbar-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Status bar color 顶部状态栏 -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- 虚拟按键不透明 -->
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- 透明状态栏 -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 界面不沉浸到状态栏下方 -->
        <item name="android:fitsSystemWindows">true</item>
        <!-- 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- toolbar上文字颜色 -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <!-- 使窗口保持半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowShowWallpaper">false</item>
        <!-- Inactive thumb color（SwitchCompat圆球默认颜色） -->
        <item name="colorSwitchThumbNormal">@color/colorPrimaryDark</item>
        <!-- Inactive track color(30% transparency)（SwitchCompat引导带颜色） -->
        <item name="android:colorForeground">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

</resources>