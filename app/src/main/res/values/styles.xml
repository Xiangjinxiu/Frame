<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Status bar color 顶部状态栏 -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- toolbar上文字颜色 -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 使窗口保持半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowShowWallpaper">false</item>
        <!-- Inactive thumb color（SwitchCompat圆球默认颜色） -->
        <item name="colorSwitchThumbNormal">@color/colorPrimaryDark</item>
        <!-- Inactive track color(30% transparency)（SwitchCompat引导带颜色） -->
        <item name="android:colorForeground">@color/colorAccent</item>
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
